<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>


<?import javafx.scene.layout.GridPane?>
<GridPane xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="ReversiGUI.Controller" alignment="center"
          hgap="10" vgap="10">
    <padding><Insets top="25" right="25" bottom="10"
                     left="25"></Insets></padding>
    <Text text="Welcome" id="welcomeText"
          GridPane.rowIndex="0" GridPane.columnIndex="0"
          GridPane.columnSpan="2"/>
    <Label text="User Name:"
           GridPane.rowIndex="1" GridPane.columnIndex="0"/>

    <TextField fx:id="usernameTextField"
               GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Password:"
           GridPane.rowIndex="2" GridPane.columnIndex="0"/>

    <PasswordField fx:id="passwordField"
                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>


    <HBox alignment="bottom_right"
          GridPane.rowIndex="4" GridPane.columnIndex="1">
        <Button text="Sign In" onAction="#signIn"/>
    </HBox>
    <Text fx:id="messageText"
          GridPane.rowIndex="6" GridPane.columnIndex="0"/>


</GridPane>